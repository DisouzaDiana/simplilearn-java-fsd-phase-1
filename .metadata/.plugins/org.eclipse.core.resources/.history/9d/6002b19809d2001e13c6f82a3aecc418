package typecasting.com.simplilearn.typecasting;

import java.util.Scanner;

public class ExplicitTypeCasting {

	public static void main(String[] args) {
		System.out.println("Explicit Typecasting");
		
		
		//Double -> float -> long -> int -> short -> byte
		System.out.println("Enter Number");
		Scanner Doubleinput  = new Scanner(System.in);
		
		Double doubleValue = Doubleinput.nextDouble();
		
		System.out.println("Double value :"+doubleValue);
		
		float floatVal = (float)doubleValue;
		
		long longVal = (long)floatVal;
		
		short shortValue = (short) longVal;
		
		int intVal = (int) shortValue;
		
		
		
		
		
		double doubleVal = byteValue;
		
		System.out.println("Short Value  :"+shortValue);
		System.out.println("Integer Value  :"+intVal);
		System.out.println("Long Value  :"+longVal);
		System.out.println("Float Value  :"+floatVal);
		System.out.println("Double value :"+doubleVal);
		
	}

}
